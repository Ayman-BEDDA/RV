<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuRvActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RV-Visiteur!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"/>


    <Button
        android:id="@+id/bRechercherRv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consulter un rapport de visite"
        android:onClick="envoyerRechercher"
        />

    <Button
        android:id="@+id/bSaisirRv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saisir un rapport de visite"
        />


</LinearLayout>